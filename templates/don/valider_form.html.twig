{% extends 'admin/admin_dashboard.html.twig' %}

{% block title %}Valider le Don{% endblock %}

{% block content %}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <!-- En-tête -->
            <div class="mb-4">
                <a href="{{ path('app_don_valider') }}" class="btn btn-outline-secondary btn-sm mb-3">
                    <i class="bi bi-arrow-left"></i> Retour à la liste
                </a>
                <h1 class="h3">
                    <i class="bi bi-clipboard-check text-success"></i> Validation du Don
                </h1>
            </div>

            <div class="row">
                <!-- Informations du Donateur -->
                <div class="col-md-5">
                    <div class="card shadow-sm mb-4">
                        <div class="card-header bg-primary text-white">
                            <h5 class="mb-0"><i class="bi bi-person-fill"></i> Informations Donateur</h5>
                        </div>
                        <div class="card-body">
                            <table class="table table-sm">
                                <tbody>
                                    <tr>
                                        <th width="50%">Nom:</th>
                                        <td><strong>{{ rendezVous.donateur.prenom }}</strong></td>
                                    </tr>
                                    <tr>
                                        <th>Email:</th>
                                        <td>{{ rendezVous.donateur.email }}</td>
                                    </tr>
                                    <tr>
                                        <th>Groupe Sanguin:</th>
                                        <td><span class="badge bg-danger">{{ rendezVous.donateur.groupeSanguin }}</span></td>
                                    </tr>
                                    <tr>
                                        <th>Dernier Don:</th>
                                        <td>
                                            {% if rendezVous.donateur.derniereDateDon %}
                                                {{ rendezVous.donateur.derniereDateDon|date('d/m/Y') }}
                                            {% else %}
                                                <span class="badge bg-info">Premier don</span>
                                            {% endif %}
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>

                    <div class="card shadow-sm">
                        <div class="card-header bg-info text-white">
                            <h5 class="mb-0"><i class="bi bi-calendar-event"></i> Rendez-vous</h5>
                        </div>
                        <div class="card-body">
                            <table class="table table-sm">
                                <tbody>
                                    <tr>
                                        <th width="50%">Collecte:</th>
                                        <td>{{ rendezVous.collecte.nom }}</td>
                                    </tr>
                                    <tr>
                                        <th>Lieu:</th>
                                        <td>{{ rendezVous.collecte.lieu.nomLieu }}</td>
                                    </tr>
                                    <tr>
                                        <th>Date:</th>
                                        <td>{{ rendezVous.dateHeureDebut|date('d/m/Y H:i') }}</td>
                                    </tr>
                                    <tr>
                                        <th>Statut:</th>
                                        <td><span class="badge bg-success">{{ rendezVous.statut }}</span></td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

                <!-- Formulaire de Validation -->
                <div class="col-md-7">
                    <div class="card shadow-sm">
                        <div class="card-header bg-success text-white">
                            <h5 class="mb-0"><i class="bi bi-clipboard-check"></i> Formulaire de Validation Médicale</h5>
                        </div>
                        <div class="card-body p-4">
                            {{ form_start(form) }}
                                <div class="mb-3">
                                    {{ form_row(form.datedon) }}
                                </div>

                                <div class="mb-3">
                                    {{ form_row(form.typeDon) }}
                                </div>

                                <div class="mb-3">
                                    {{ form_row(form.quantite) }}
                                    <small class="text-muted">Quantité standard: 450ml pour un don de sang total</small>
                                </div>

                                <div class="mb-4">
                                    {{ form_label(form.apte) }}
                                    <div class="form-check">
                                        {{ form_widget(form.apte[0]) }}
                                        <label class="form-check-label text-success fw-bold" for="{{ form.apte[0].vars.id }}">
                                            <i class="bi bi-check-circle"></i> Apte - Le donateur peut donner son sang
                                        </label>
                                    </div>
                                    <div class="form-check">
                                        {{ form_widget(form.apte[1]) }}
                                        <label class="form-check-label text-danger fw-bold" for="{{ form.apte[1].vars.id }}">
                                            <i class="bi bi-x-circle"></i> Non apte - Le donateur ne peut pas donner
                                        </label>
                                    </div>
                                    {{ form_errors(form.apte) }}
                                </div>

                                <div class="mb-4">
                                    {{ form_row(form.commentaire) }}
                                </div>

                                <div class="alert alert-warning">
                                    <i class="bi bi-exclamation-triangle"></i>
                                    <strong>Important:</strong> En validant ce formulaire, vous confirmez que le donateur a effectué son don et que toutes les informations médicales sont correctes.
                                </div>

                                <div class="d-flex justify-content-between">
                                    <a href="{{ path('app_don_valider') }}" class="btn btn-secondary">
                                        <i class="bi bi-x-circle"></i> Annuler
                                    </a>
                                    <button type="submit" class="btn btn-success btn-lg">
                                        <i class="bi bi-check-circle"></i> Valider le Don
                                    </button>
                                </div>
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}