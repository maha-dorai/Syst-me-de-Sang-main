{% extends 'admin/admin_dashboard.html.twig' %}

{% block title %}Nouveau Lieu{% endblock %}

{% block content %}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <!-- En-tête -->
            <div class="mb-4">
                <a href="{{ path('app_lieu_index') }}" class="btn btn-outline-secondary btn-sm mb-3">
                    <i class="bi bi-arrow-left"></i> Retour à la liste
                </a>
                <h1 class="h3">
                    <i class="bi bi-plus-circle text-primary"></i> Nouveau Lieu
                </h1>
            </div>

            <!-- Messages Flash -->
            {% for message in app.flashes('error') %}
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="bi bi-exclamation-triangle"></i> {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            {% endfor %}

            <!-- Formulaire -->
            <div class="card shadow-sm">
                <div class="card-body p-4">
                    {{ form_start(form) }}
                        {{ form_widget(form) }}

                        <div class="d-flex justify-content-between mt-4">
                            <a href="{{ path('app_lieu_index') }}" class="btn btn-secondary">
                                <i class="bi bi-x-circle"></i> Annuler
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-save"></i> Enregistrer
                            </button>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}